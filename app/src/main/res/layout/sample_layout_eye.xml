<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_marginTop="5dp"
        android:id="@+id/nameTextViewIde"
        android:text="Name: Dr. Anisul Islam"
        android:textColor="#000"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_marginTop="5dp"
        android:id="@+id/qlTextViewIde"
        android:text="Qualifications: MBBS,FCPH(medi)"
        android:textColor="#000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_marginTop="5dp"
        android:id="@+id/placeTextViewIde"
        android:text="Place: RCH,Bogura"
        android:textColor="#000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_marginTop="5dp"
        android:id="@+id/contactTextViewIde"
        android:text="Contacts: For serial: 456845654"
        android:textColor="#000"/>

</LinearLayout>